<div class="container-fluid">
  <p id="notice"><%= notice %></p>

  <!-- Post Title -->

  <div class="row">
    <div class="col-lg-6 col-md-6 col-sm-4 col-xs-4"><h1>FuzzBlog</h1>
    </div>

    <% if checkAdminStatus(current_user.status) %>

      <div class="col-lg-6 col-md-6 col-sm-8 col-xs-8 indexAddPosts">
          <%= link_to 'Add New Post', new_post_path, class: "redBtn btn" %>
      </div>
    
    <% end %> 

  </div> 

  <!-- Posts Listing -->

  <% @posts.each do |post| %>
   
  <div class="row indexRowPost">

    <!-- post content -->
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">

      <div class="indexPostTitle"> <%= post.title %> </div> 

      <div class="indexPostDate">
      <span class="glyphicon glyphicon-calendar"></span> <%= post.datecreated.strftime("%d %b %Y %A") %> &nbsp; <span class="glyphicon glyphicon-link"></span> <%= link_to 'Permalink', post %> 
              
      </div> 

      <%= image_tag(post.image_url, class: "img-responsive text-center") if post.image_url.present? %>

      <div class="indexPostDescript"> <%= truncate(post.content,length:280) %> </div>

      <% if checkAdminStatus(current_user.status) %>

        <div class="indexPostLinks text-center">     
          <%= link_to 'Continue Reading', post, class:"indexPostLinksBtn" %> &nbsp;
          <%= link_to 'Edit', edit_post_path(post), class:"indexPostLinksBtn" %> &nbsp;
          <%= link_to 'Delete', post, class:"indexPostLinksBtn", method: :delete, data: { confirm: 'Are you sure?' } %>
        </div>  

      <% end %>

    </div>

  </div> 

  <% end %>

</div>


</div>