<div class="container-fluid">
  <p id="notice"><%= notice %></p>

  <!-- Post Title -->

  <div class="row">
    <div class="col-lg-6 col-md-6 col-sm-4 col-xs-4"><h1>FuzzBlog</h1>
    </div>
    <div class="col-lg-6 col-md-6 col-sm-8 col-xs-8 indexAddPosts"><%= link_to 'Add New Post', new_post_path, class: "redBtn" %></div>

  </div> 

  <!-- Posts Listing -->

  <% @posts.each do |post| %>

  <div class="row indexRowPost">

    <!-- post content -->
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">

      <div class="indexPostTitle"> <%= post.title %> </div> 

      <div class="indexPostDate">
        Date Created: <%= post.datecreated %> 
        Date Edited: <%= post.dateedited.strftime("%d %b %Y %A") %>          
      </div> 

      <%= image_tag(post.image_url, class: "img-responsive text-center") if post.image_url.present? %>

      <div class="indexPostDescript"> <%= post.content %> </div>



      <div class="indexPostLinks">     
        <%= link_to 'View', post, class:"indexPostLinksBtn" %> &nbsp;
        <%= link_to 'Edit', edit_post_path(post), class:"indexPostLinksBtn" %> &nbsp;
        <%= link_to 'Delete', post, class:"indexPostLinksBtn", method: :delete, data: { confirm: 'Are you sure?' } %>
      </div>  

    </div>

  </div> 

  <% end %>

</div>



<br>

<%= link_to 'New Post', new_post_path %>

</div>